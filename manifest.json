{
  "name": "Minto",
  "version": "1.0",
  "description": "Enhance your productivity with mints!",
  "permissions": ["storage", "tabs", "alarms", "idle"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "options_page": "html/options.html",
  "browser_action": {
    "default_title": "Set work timers to enhance productivity",
    "default_popup": "html/popup.html",
    "default_icon": "assets/img/mint.png"
  },
  "icons": {
    "128": "assets/img/mint-128x128.png",
    "16": "assets/img/mint-16x16.png",
    "48": "assets/img/mint-48x48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["js/content.js"]
    }
  ],
  "web_accessible_resources": ["html/blocked.html", "html/no-mints.html"],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+D",
        "mac": "MacCtrl+D"
      },
      "description": "Opens popup"
    }
  },
  "manifest_version": 2
}
